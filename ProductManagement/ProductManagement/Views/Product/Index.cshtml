@model PagedList.Core.IPagedList<ProductManagement.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<form asp-controller="Product" asp-action="Index" method="post" class="container my-3">
    <div class="row">
        <div class="col-md-1">
            <a asp-controller="Product" asp-action="Save" class="btn btn-success float-right">Add Products</a>
        </div>
        <div class="col-md-4 offset-6">
            <input type="text" name="search" id="search" placeholder="Search product by name and category" class="form-control ml-4" />

        </div>
        <div class="col-md-1">
            <input type="submit" value="Search" class="btn btn-info" />

        </div>
    </div>
</form>

<section>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/img5.jpg" class="homePageImage" />
        </div>
    </div>
</section>

<section class="product">
    <div class="container">
        <h2 class="textClass">Products</h2>
        <hr class="hrClass" />
        <div class="row pt-2">
            @foreach (var item in Model)
            {
                <div class=" col-md-4">
                    <div class="card card-body  productBox ">

                        <div class="row">
                            <div class="col-md-12">
                                <img src="~/images/img3.jpg" class="img-thumbnail" />
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col-md-4"><b>Name</b></div>
                            <div class="col-md-1">:</div>
                            <div class="col-md-4">@item.Name</div>
                        </div>

                        <div class="row">
                            <div class="col-md-4"><b>Price</b></div>
                            <div class="col-md-1">:</div>
                            <div class="col-md-4">@item.Cost&#8377</div>
                        </div>

                        <div class="row mt-3">
                            <a asp-controller="Product" asp-action="Save" asp-route-id="@item.Id" class="btn btn-info mr-2 ml-2">Edit</a>
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mr-2">Details</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mr-2">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div>
            <pager list="@Model" asp-controller="Product" asp-action="Index" class="mt-4" />
        </div>
    </div>
</section>
