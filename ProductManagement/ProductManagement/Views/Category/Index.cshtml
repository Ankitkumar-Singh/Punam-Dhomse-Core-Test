@model PagedList.Core.IPagedList<ProductManagement.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<section class="category">
    <div class="container">
        <h2 class="textClass">Categories</h2>
        <hr class="hrClass" />
        <p>
            <a asp-controller="Category" asp-action="Save" class="btn btn-success float-right mb-5">Add Category</a>
        </p>
        <br />
        <hr />
        <div class="row">
            @foreach (var item in Model)
            {
                <div class=" col-md-4">
                    <div class="card card-body productBox ">

                        <div class="row">
                            <div class="col-md-12">
                                <img src="~/images/img4.jpg" class="img-thumbnail" />
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col-md-4"><b>Name</b></div>
                            <div class="col-md-1">:</div>
                            <div class="col-md-6">@item.Name</div>
                        </div>

                        <div class="row mt-3">
                            <a asp-controller="Category" asp-action="Save" asp-route-id="@item.Id" class="btn btn-info mr-2 ml-2">Edit</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mr-2">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div>
            <pager list="@Model" asp-controller="Category" asp-action="Index" class="mt-5" />
        </div>
    </div>
</section>
