@model ProductManagement.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="container mb-5 pt-5">
    <br />
    <div>
        <h3 class="text-danger  ">Are you sure you want to delete this category?</h3>
        <hr />
        <div class="row">
            <div class="col-md-2"> <b>Name</b> </div>
            <div class="col-md-1">:</div>
            <div class="col-md-2"> @Model.Name</div>
        </div>

        <div class="row mt-5">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <a asp-controller="Category" asp-action="Index" class="btn btn-info ml-2">Cancel</a>
                <input type="submit" value="Delete" class="btn  btn-danger" id="btnDelete" />
            </form>
        </div>
    </div>
</div>